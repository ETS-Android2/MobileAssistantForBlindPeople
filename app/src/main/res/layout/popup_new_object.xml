<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dp_15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_15"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_20"
                    app:srcCompat="@drawable/ic_close_black_24dp"
                    android:layout_margin="@dimen/dp_2"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:elevation="@dimen/dp_5"
                    android:id="@+id/close_icon_username_change"
                    android:layout_gravity="right"
                    android:layout_height="@dimen/dp_20"/>

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_new_object_name"
                    android:hint="Obje Ä°smi"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_round"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="match_parent"
                    android:text="Obje Ekle"
                    android:id="@+id/popup_add_object_button"
                    android:textSize="@dimen/sp_18"
                    android:padding="@dimen/dp_10"
                    android:layout_margin="@dimen/dp_8"
                    android:textColor="@color/White"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@drawable/button_checkpoint_round"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>