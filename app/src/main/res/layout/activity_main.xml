<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_activity_layout"
    android:padding="@dimen/dp_20"
    tools:context=".assistant_for_the_blind_activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_15"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/login_with_google_button"
            android:text="Google ile KayÄ±t ol"
            android:background="@drawable/bg_round"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/introduce_env_cardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_main_button"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/introduce_env_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@drawable/introduce_env"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_10"/>

            <TextView
                android:id="@+id/introduce_env_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/introduce_env"
                android:textColor="@color/White"
                android:textSize="@dimen/sp_20" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/read_document_cardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp_10"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_main_button"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/read_document_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="@drawable/documentreadicon"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_10"/>

            <TextView
                android:id="@+id/read_document_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/read_document"
                android:textColor="@color/White"
                android:textSize="@dimen/sp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/read_document_image" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/train_yourself_cardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp_10"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_main_button"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/train_yourself_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/gallery"
                android:padding="@dimen/dp_10"/>

            <TextView
                android:id="@+id/train_yourself_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/train_yourself"
                android:textColor="@color/White"
                android:textSize="@dimen/sp_20"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/select_model_cardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp_10"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_main_button"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/select_model_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/select"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_10" />


            <TextView
                android:id="@+id/select_model_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/select_model"
                android:textColor="@color/White"
                android:textSize="@dimen/sp_20"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>